@using MYCV.Domain.Enums
@model MYCV.Application.DTOs.UserPersonalDetailDto

@{
    ViewData["Title"] = "CV Builder Dashboard";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col text-center">
                <h2 class="fw-bold">Build Your CV</h2>
                <p class="text-muted">Complete each step to create your professional resume</p>
            </div>
        </div>

        <div class="row">
            <!-- LEFT STEP NAVIGATION -->
            <div class="col-lg-4 mb-4">
                @await Component.InvokeAsync("CvStepNavigation", new
                    {
                        currentStep = 1,
                        completedSteps = new List<int>()
                    })
            </div>

            <!-- RIGHT CONTENT AREA -->
            <div class="col-lg-8" style="max-height: 80vh; overflow-y: auto;">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="fw-semibold mb-0">Step <span id="currentStepDisplay">1</span></h4>
                            <span class="badge bg-primary" id="stepBadge">In Progress</span>
                        </div>

                        <div class="accordion" id="cvFormAccordion">

                            <!-- Step 1: Personal Information -->
                            <div class="accordion-item step-form" data-step="1">
                                <h2 class="accordion-header" id="headingStep1">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStep1" aria-expanded="true" aria-controls="collapseStep1">
                                        Personal Information
                                    </button>
                                </h2>
                                <div id="collapseStep1" class="accordion-collapse collapse show" aria-labelledby="headingStep1">
                                    <div class="accordion-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                                                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="ProfessionalTitle" class="form-label">Professional Title <span class="text-danger">*</span></label>
                                                <input asp-for="ProfessionalTitle" class="form-control" placeholder="Software Engineer, Graphic Designer, etc." required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                                <input asp-for="DateOfBirth" type="date" class="form-control" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Gender" class="form-label">Gender <span class="text-danger">*</span></label>
                                                <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()" required>
                                                    <option value="">Choose...</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 2: Contact Information -->
                            <div class="accordion-item step-form" data-step="2">
                                <h2 class="accordion-header" id="headingStep2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStep2" aria-expanded="false" aria-controls="collapseStep2">
                                        Contact Information
                                    </button>
                                </h2>
                                <div id="collapseStep2" class="accordion-collapse collapse" aria-labelledby="headingStep2">
                                    <div class="accordion-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                                <input asp-for="PhoneNumber" class="form-control" placeholder="+880 1XXXXXXXXX" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Country" class="form-label">Country <span class="text-danger">*</span></label>
                                                <input asp-for="Country" class="form-control" placeholder="Bangladesh" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                                                <input asp-for="City" class="form-control" placeholder="Dhaka" required />
                                            </div>
                                            <div class="col-md-12">
                                                <label asp-for="Address" class="form-label">Address <span class="text-danger">*</span></label>
                                                <input asp-for="Address" class="form-control" placeholder="Street, Area, ZIP" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 3: Social & Online Presence -->
                            <div class="accordion-item step-form" data-step="3">
                                <h2 class="accordion-header" id="headingStep3">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStep3" aria-expanded="false" aria-controls="collapseStep3">
                                        Social & Online Presence
                                    </button>
                                </h2>
                                <div id="collapseStep3" class="accordion-collapse collapse" aria-labelledby="headingStep3">
                                    <div class="accordion-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="LinkedIn" class="form-label">LinkedIn</label>
                                                <input asp-for="LinkedIn" type="url" class="form-control" placeholder="https://linkedin.com/in/username" />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="GitHub" class="form-label">GitHub</label>
                                                <input asp-for="GitHub" type="url" class="form-control" placeholder="https://github.com/username" />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Portfolio" class="form-label">Portfolio</label>
                                                <input asp-for="Portfolio" type="url" class="form-control" placeholder="https://myportfolio.com" />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Website" class="form-label">Website / Blog</label>
                                                <input asp-for="Website" type="url" class="form-control" placeholder="https://example.com" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 4: Optional Professional Detail -->
                            <div class="accordion-item step-form" data-step="4">
                                <h2 class="accordion-header" id="headingStep4">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStep4" aria-expanded="false" aria-controls="collapseStep4">
                                        Optional Professional Detail
                                    </button>
                                </h2>
                                <div id="collapseStep4" class="accordion-collapse collapse" aria-labelledby="headingStep4">
                                    <div class="accordion-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="ProfilePictureUrl" class="form-label">Profile Picture</label>
                                                <input asp-for="ProfilePictureUrl" type="file" class="form-control" />
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="LinkedInHeadline" class="form-label">LinkedIn Headline</label>
                                                <input asp-for="LinkedInHeadline" type="text" class="form-control" placeholder="Software Engineer | Full Stack Developer" />
                                            </div>
                                            <div class="col-md-12">
                                                <label asp-for="Summary" class="form-label">Summary / About Me</label>
                                                <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Brief professional summary"></textarea>
                                            </div>
                                            <div class="col-md-12">
                                                <label asp-for="Objective" class="form-label">Career Objective</label>
                                                <textarea asp-for="Objective" class="form-control" rows="3" placeholder="Career goals and objectives"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Navigation Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-secondary btn-prev-step" disabled>Previous</button>
                            <button type="button" class="btn btn-primary btn-next-step">Save & Continue →</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal for Saved Info -->
<div class="modal fade" id="infoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-success">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Saved Successfully!</h5>
            </div>
            <div class="modal-body">
                <div id="savedInfoContent"></div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .cv-steps {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .cv-steps .step {
                display: flex;
                align-items: center;
                position: relative;
                padding: 12px 0;
                color: #6c757d;
                font-weight: 500;
                cursor: pointer;
                transition: 0.3s;
            }

                .cv-steps .step .step-circle {
                    width: 28px;
                    height: 28px;
                    border-radius: 50%;
                    border: 2px solid #dee2e6;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin-right: 12px;
                    font-size: 14px;
                    transition: 0.3s;
                }

                .cv-steps .step.active {
                    color: #0d6efd;
                    font-weight: 600;
                }

                    .cv-steps .step.active .step-circle {
                        border-color: #0d6efd;
                        background-color: #0d6efd;
                        color: #fff;
                    }

                .cv-steps .step.completed {
                    color: #198754;
                }

                    .cv-steps .step.completed .step-circle {
                        border-color: #198754;
                        background-color: #198754;
                        color: #fff;
                    }

                .cv-steps .step:not(:last-child)::after {
                    content: '';
                    position: absolute;
                    left: 14px;
                    top: 42px;
                    height: 100%;
                    width: 2px;
                    background-color: #e9ecef;
                }
    </style>
}

@section Scripts {
    <script>
        let currentStep = 1;
        let completedSteps = [];

        function updateSidebar() {
            document.querySelectorAll('.cv-steps .step').forEach((s, index) => {
                const stepNum = index + 1;

                if (completedSteps.includes(stepNum)) {
                    s.classList.add('completed');
                    s.classList.remove('active');
                    s.querySelector('.step-circle').textContent = '✓';
                }
                else if (stepNum === currentStep) {
                    s.classList.add('active');
                    s.classList.remove('completed');
                    s.querySelector('.step-circle').textContent = stepNum;
                }
                else {
                    s.classList.remove('active', 'completed');
                    s.querySelector('.step-circle').textContent = stepNum;
                }
            });

            document.getElementById('currentStepDisplay').textContent = currentStep;
            document.querySelector('.btn-prev-step').disabled = currentStep === 1;
        }

        function validateStep(step) {
            const section = document.querySelector(`.step-form[data-step="${step}"]`);
            let valid = true;

            section.querySelectorAll('[required]').forEach(input => {
                if (!input.value) {
                    input.classList.add('is-invalid');
                    valid = false;
                } else {
                    input.classList.remove('is-invalid');
                }
            });

            return valid;
        }

        function buildFormData() {

            const formData = new FormData();

            // ============================
            // Required Fields
            // ============================
            formData.append("FullName", document.querySelector('[name="FullName"]').value);
            formData.append("ProfessionalTitle", document.querySelector('[name="ProfessionalTitle"]').value);
            formData.append("DateOfBirth", document.querySelector('[name="DateOfBirth"]').value);
            formData.append("Gender", document.querySelector('[name="Gender"]').value);
            formData.append("Email", document.querySelector('[name="Email"]').value);
            formData.append("PhoneNumber", document.querySelector('[name="PhoneNumber"]').value);
            formData.append("Country", document.querySelector('[name="Country"]').value);
            formData.append("City", document.querySelector('[name="City"]').value);
            formData.append("Address", document.querySelector('[name="Address"]').value);

            // ============================
            // Optional Fields
            // ============================
            formData.append("LinkedIn", document.querySelector('[name="LinkedIn"]')?.value || "");
            formData.append("GitHub", document.querySelector('[name="GitHub"]')?.value || "");
            formData.append("Portfolio", document.querySelector('[name="Portfolio"]')?.value || "");
            formData.append("Website", document.querySelector('[name="Website"]')?.value || "");
            formData.append("LinkedInHeadline", document.querySelector('[name="LinkedInHeadline"]')?.value || "");
            formData.append("Summary", document.querySelector('[name="Summary"]')?.value || "");
            formData.append("Objective", document.querySelector('[name="Objective"]')?.value || "");

            // ============================
            // Profile Picture Upload
            // ============================
            const fileInput = document.querySelector('[type="file"]');
            if (fileInput && fileInput.files.length > 0) {
                formData.append("ProfilePicture", fileInput.files[0]);
            }

            return formData;
        }

        async function savePersonalDetail() {

            if (!validateStep(currentStep)) {
                alert("Please complete all required fields.");
                return;
            }

            const formData = buildFormData();

            try {
                const response = await fetch('/CvBuilder/SavePersonalDetail', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (!response.ok || !result.success) {
                    alert(result.message || "Failed to save data.");
                    return;
                }

                showSuccessModal(result.data);

                completedSteps.push(currentStep);

                setTimeout(() => {
                    window.location.href = '/CvBuilder/Education';
                }, 1500);

            } catch (error) {
                console.error(error);
                alert("Something went wrong.");
            }
        }

        function showSuccessModal(savedData) {

            let content = "<ul class='list-group'>";

            for (const key in savedData) {
                if (savedData[key]) {
                    content += `<li class='list-group-item'>
                                    <strong>${key}:</strong> ${savedData[key]}
                                </li>`;
                }
            }

            content += "</ul>";

            document.getElementById("savedInfoContent").innerHTML = content;

            const modal = new bootstrap.Modal(document.getElementById('infoModal'));
            modal.show();

            setTimeout(() => modal.hide(), 4000);
        }

        document.querySelector('.btn-next-step')
            .addEventListener('click', function (e) {
                e.preventDefault();
                savePersonalDetail();
            });

        document.querySelector('.btn-prev-step')
            .addEventListener('click', function (e) {
                e.preventDefault();
                if (currentStep > 1) currentStep--;
                updateSidebar();
            });

        updateSidebar();
    </script>
}
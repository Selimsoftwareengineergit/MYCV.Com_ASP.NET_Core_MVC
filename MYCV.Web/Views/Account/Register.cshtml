@model MYCV.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register - MYCV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= breadcrumb start ========================= -->
<section class="breadcrumb bg-primary position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Create Account</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center bg-transparent">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Register</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ========================= breadcrumb end ========================= -->
<!-- ========================= register-section start ========================= -->
<section class="register-section pt-30 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="register-wrapper">
                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="lni lni-checkmark-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="lni lni-cross-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Register Card -->
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-5">
                            <!-- Header -->
                            <div class="text-center mb-5">
                                <div class="register-icon">
                                    <i class="lni lni-user" style="font-size: 4rem; color: #5a4fdc;"></i>
                                </div>
                                <h2 class="fw-bold mb-2">Join MYCV Today</h2>
                                <p class="text-muted">Create your account and build your professional career</p>
                            </div>

                            <!-- Register Form -->
                            <form asp-controller="Account" asp-action="Register" method="post">
                                @Html.AntiForgeryToken()

                                <div class="mb-4">
                                    <label asp-for="FullName" class="form-label fw-semibold">
                                        <i class="lni lni-user me-2"></i>Full Name
                                    </label>
                                    <input asp-for="FullName"
                                           class="form-control form-control-lg @(ViewData.ModelState["FullName"]?.Errors.Any() == true ? "is-invalid" : "")"
                                           placeholder="Enter your full name">
                                    <span asp-validation-for="FullName" class="invalid-feedback"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="lni lni-envelope me-2"></i>Email Address
                                    </label>
                                    <input asp-for="Email"
                                           class="form-control form-control-lg @(ViewData.ModelState["Email"]?.Errors.Any() == true ? "is-invalid" : "")"
                                           placeholder="Enter your email address">
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Password" class="form-label fw-semibold">
                                        <i class="lni lni-lock me-2"></i>Password
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Password"
                                               type="password"
                                               class="form-control form-control-lg @(ViewData.ModelState["Password"]?.Errors.Any() == true ? "is-invalid" : "")"
                                               placeholder="Create a strong password"
                                               id="passwordInput">
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="lni lni-eye" id="eyeIcon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                                    <small class="form-text text-muted">Use at least 8 characters with letters and numbers.</small>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                        <i class="lni lni-lock-alt me-2"></i>Confirm Password
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword"
                                               type="password"
                                               class="form-control form-control-lg @(ViewData.ModelState["ConfirmPassword"]?.Errors.Any() == true ? "is-invalid" : "")"
                                               placeholder="Re-enter your password"
                                               id="confirmPasswordInput">
                                        <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                            <i class="lni lni-eye" id="confirmEyeIcon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback d-block"></span>
                                </div>

                                <!-- Terms & Conditions -->
                                <div class="mb-4">
                                    <div class="form-check">
                                        <input asp-for="AgreeToTerms"
                                               class="form-check-input @(ViewData.ModelState["AgreeToTerms"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                        <label asp-for="AgreeToTerms" class="form-check-label">
                                            I agree to the <a asp-controller="Home" asp-action="Terms" class="text-primary">Terms & Conditions</a> and <a asp-controller="Home" asp-action="Privacy" class="text-primary">Privacy Policy</a>
                                        </label>
                                        <span asp-validation-for="AgreeToTerms" class="invalid-feedback d-block"></span>
                                    </div>
                                </div>

                                <!-- Validation Summary -->
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                                <div class="d-grid mb-4">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="lni lni-user-plus me-2"></i>Create Account
                                    </button>
                                </div>

                                <!-- Divider -->
                                <div class="divider my-4">
                                    <div class="divider-text">Or sign up with</div>
                                </div>

                                <!-- Social Register (Optional) -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <a href="#" class="btn btn-outline-dark btn-lg w-100">
                                            <i class="lni lni-google me-2"></i>Google
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="#" class="btn btn-outline-primary btn-lg w-100">
                                            <i class="lni lni-linkedin-original me-2"></i>LinkedIn
                                        </a>
                                    </div>
                                </div>

                                <!-- Login Link -->
                                <div class="text-center pt-4">
                                    <p class="text-muted mb-0">
                                        Already have an account?
                                        <a asp-controller="Account" asp-action="Login" class="text-primary fw-semibold ms-2">
                                            Sign In
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ========================= register-section end ========================= -->
<!-- ========================= benefits-section start ========================= -->
<section class="benefits-section bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h3 class="fw-bold">Benefits of Joining MYCV</h3>
                    <p class="text-muted">Unlock powerful tools to advance your career</p>
                </div>

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="benefit-card text-center p-4 h-100">
                            <div class="benefit-icon mb-3">
                                <i class="lni lni-layout" style="font-size: 2.5rem; color: #5a4fdc;"></i>
                            </div>
                            <h5 class="fw-bold mb-3">Professional Templates</h5>
                            <p class="text-muted">Access 50+ ATS-friendly CV templates designed by career experts.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="benefit-card text-center p-4 h-100">
                            <div class="benefit-icon mb-3">
                                <i class="lni lni-cloud-upload" style="font-size: 2.5rem; color: #5a4fdc;"></i>
                            </div>
                            <h5 class="fw-bold mb-3">Cloud Storage</h5>
                            <p class="text-muted">Store multiple CV versions securely in the cloud. Access anywhere.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="benefit-card text-center p-4 h-100">
                            <div class="benefit-icon mb-3">
                                <i class="lni lni-cogs" style="font-size: 2.5rem; color: #5a4fdc;"></i>
                            </div>
                            <h5 class="fw-bold mb-3">Easy Editor</h5>
                            <p class="text-muted">Drag & drop editor with real-time preview. No design skills needed.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ========================= benefits-section end ========================= -->
@section Styles {
    <style>

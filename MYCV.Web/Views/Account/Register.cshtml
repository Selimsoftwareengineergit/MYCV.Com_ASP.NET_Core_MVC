            margin-bottom: 0.1rem;
            font-weight: 600;
        }

        .breadcrumb .breadcrumb {
            padding: 0.1rem 0;
            margin-bottom: 0;
        }

        .register-section {
            background: #ffffff;
        }

        .register-wrapper {
            margin-top: -5px;
            position: relative;
            z-index: 1;
        }

        .card-body.p-5 {
            padding: 1.5rem !important;
        }

        .register-icon {
            margin-bottom: 1rem;
        }

